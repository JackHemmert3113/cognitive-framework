{
  "name": "monorepo-example",
  "version": "1.0.0",
  "description": "Monorepo example for AI Test Framework",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test:all",
    "test:all": "npm run test:shared && npm run test:api && npm run test:web",
    "test:shared": "npm test --workspace=@monorepo/shared",
    "test:api": "npm test --workspace=@monorepo/api",
    "test:web": "npm test --workspace=@monorepo/web-app",
    "test:ai": "ai-test",
    "test:watch": "ai-test --watch"
  },
  "devDependencies": {
    "@your-utilities/ai-test-framework": "^1.1.0",
    "jest": "^29.0.0"
  }
}